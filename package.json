{
  "name": "backend-nodejs",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "https://github.com/sudeep79454/qa-assessment",
  "author": "Sudeep Paudyal <sudeep81@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./build/server/index.js ",
    "dev": "nodemon --ignore ./build -e js,ts,json,css,html --exec 'yarn build && yarn test && yarn start'",
    "build": "yarn clean && yarn build-server",
    "lint": "eslint",
    "test": "NODE_ENV=testing jest ./src/__tests__",
    "clean": "rm -rf ./build/*",
    "build-server": "tsc"
  },
  "dependencies": {
    "express": "^4.17.3",
    "jest-fetch-mock": "^3.0.3",
    "node-fetch": "^3.2.3",
    "routing-controllers": "^0.9.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.17.8",
    "@testing-library/dom": "^8.11.4",
    "@types/express": "^4.17.13",
    "@types/jest": "27",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "eslint": "^8.11.0",
    "jest": "27",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27",
    "typescript": "^4.6.2"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "../coverage",
    "coverageProvider": "v8",
    "testEnvironment": "node",
    "preset": "ts-jest",
    "rootDir": "src",
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/**/*.ts"
    ]
  },
  "engines": {
    "node": "^16.15"
  }
}
